#include <iostream>
using namespace std;
int CoinDP(int *coins,int N,int *array)
{
    array[0]=0;
    for(int i=1;i<=N;i++)
    {  int j=1;
       int right=N;
       int left;
        while(j<=i && j<=3)
        {
            left=1 + array[i-coins[j-1]];
            right=min(left,right);
            array[i]=right;
            j++;
        }
    }
    return array[N];
}
int main()
{
    int N;
    cin>>N;
    int coins[3]={1,7,10};
    int *array =new int[N+1];
    for(int i=1;i<=N;i++)
        array[i]=N+1;
    cout<<CoinDP(coins,N,array);

    return 0;
}
